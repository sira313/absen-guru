{
  "name": "absen-guru",
  "version": "2.0.0",
  "description": "Sistem manajemen absensi guru untuk institusi pendidikan - SvelteKit + DaisyUI + TailwindCSS",
  "keywords": [
    "attendance",
    "teacher",
    "education",
    "svelte",
    "sveltekit",
    "daisyui",
    "tailwindcss"
  ],
  "author": "Developer",
  "license": "MIT",
  "private": false,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite dev",
    "preview": "vite preview",
    "start": "node build/index.js",
    "start:network": "echo 'Set ORIGIN environment variable first: ORIGIN=http://your-ip:3000 pnpm start:network' && node build/index.js",
    "start:prod": "NODE_ENV=production node build/index.js",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node scripts/seed.js",
    "setup": "pnpm install && pnpm db:push && pnpm db:seed",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:start:prod": "pm2 start ecosystem.config.cjs --env production",
    "pm2:start:network": "pm2 start ecosystem.config.cjs --env network",
    "pm2:stop": "pm2 stop absen-guru",
    "pm2:restart": "pm2 restart absen-guru",
    "pm2:reload": "pm2 reload absen-guru",
    "pm2:delete": "pm2 delete absen-guru",
    "pm2:logs": "pm2 logs absen-guru",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:reset": "pm2 delete absen-guru || true",
    "deploy": "./deploy-production.sh",
    "deploy:win": ".\\deploy-production.bat",
    "deploy:quick": "./quick-deploy.sh",
    "deploy:manage": "./manage-deployment.sh",
    "deploy:manage:win": ".\\manage-deployment.bat",
    "deploy:tunnel": "./setup-cloudflare-tunnel.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@sveltejs/adapter-node": "^5.3.2",
    "@sveltejs/kit": "^2.43.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "daisyui": "^5.1.14",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^5.39.5",
    "svelte-check": "^4.3.2",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@tailwindcss/vite": "^4.1.13",
    "bcrypt": "^6.0.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.5",
    "exceljs": "^4.4.0",
    "lucide-svelte": "^0.544.0",
    "nanoid": "^5.1.6",
    "tailwindcss": "^4.1.13",
    "zod": "^4.1.11"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  }
}
