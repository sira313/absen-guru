# Absen Guru Configuration Template
# Copy this file to .env and customize for your installation

# Database Configuration
DATABASE_URL="file:./absen.db"

# Session Secret - MUST CHANGE FOR PRODUCTION!
# Generate a strong random string for security
SESSION_SECRET="your-super-secret-key-change-this-in-production"

# Server Configuration  
PORT=3000
HOST=0.0.0.0

# Production Mode
NODE_ENV=production

# Optional: Timezone
TZ=Asia/Jakarta

# Optional: Attendance Rules
ATTENDANCE_CUTOFF_HOUR=8
ATTENDANCE_LATE_MINUTES=15

# Optional: App Branding
APP_NAME="Sistem Absensi Guru"

# NOTE: This configuration works universally for:
# - Local development (localhost)
# - Local network deployment (192.168.x.x)  
# - VPS/Cloud deployment (any public IP)
# No need to specify ORIGIN manually - auto-detected!

# Optional: Attendance Rules
# ATTENDANCE_CUTOFF_HOUR=8
# ATTENDANCE_LATE_MINUTES=15

# Optional: Timezone
# TZ=Asia/Jakarta